<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bg"
    tools:context=".Pointpay">

    <ImageView
        android:id="@+id/imageqrcode2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nobg"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/text2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter Text"
        android:textColorHint="@color/white"
        android:paddingStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageqrcode2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/generateQrBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Generate QR"
            android:textColor="#086B45"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="116dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/white"
            android:text="Back"
            android:textColor="#086B45"
            android:layout_marginTop="10dp"/>


    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>